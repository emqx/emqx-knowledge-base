# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/knowledge_base

# LLM API Key
LLM_API_KEY=your_llm_api_key

# LLM Provider (openai, anthropic, cohere, gemini, huggingface)
LLM_PROVIDER=openai
# LLM Model (depends on the provider)
LLM_MODEL=gpt-4o
# LLM Temperature (0.0 to 1.0)
LLM_TEMPERATURE=0.7

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Slack (optional)
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_APP_TOKEN=your_slack_app_token
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_TEAM_ID=your_slack_team_id

# LlamaIndex
LLAMA_INDEX_VERBOSE=false

# Application
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# File uploads
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760

# Security
CORS_ORIGINS=*
SECRET_KEY=supersecretkey
JWT_SECRET=your_jwt_secret  # Used for validating JWT tokens in WebSocket connections

# Features
ENABLE_SLACK=true

# Environment
# Set to 'production', 'development', or 'test'
# In production, JWT token validation is enforced
ENVIRONMENT=development